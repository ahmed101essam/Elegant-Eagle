<div class="relative bg-transparent shadow font-[lato]">
  <div class="max-w-6xl mx-auto h-14  md:h-20 ">
    <div class="h-full px-2 md:p-0 flex items-center justify-between">
      <div class="logo h-full">
        <a class="h-full" href="{{  routes.root_url }}">
          <img class="h-full w-auto" src="{{ shop.brand.logo | image_url}} " width="" height="">
        </a>
      </div>
      <div class="md:hidden">
        <button data-mobile-menu-button class="text-[#292c2f] hover:text-gray-400 mr-4">
          {% render 'icon-menu' %}
        </button>
      </div>
      <nav class="hidden md:flex text-[#292c2f] gap-4">
        {% for link in linklists['main-menu'].links %}
          {% if link.links != blank %}
            <div class="relative">
              <button
                data-dropdown-button
                class="gap-0.5 flex items-end text-xl hover:cursor-pointer {% if link.active==true %}text-[#ECC689]{% endif %}"
              >
                {{ link.title }}
                {% render 'icon-chevron-down' %}
              </button>
              <div
                data-dropdown-menu
                class="hidden absolute z-10 mt-5 transform px-2 w-screen max-w-60 sm:px-0 lg:ml-0 lg:left-1/2 lg:-translate-x-1/2 "
              >
                <div class="shadow-lg border border-black ring-black ring-opacity-5 overflow-hidden rounded-lg">
                  <div class="relative grid gap-6 bg-white px-5 py-6 sm:gap-8 sm:p-8">
                    {% for sublink in link.links %}
                      <a href="{{ sublink.url }}" class="-m-3 p-3 flex items-start rounded-lg hover:bg-[#939498]">
                        <div class="ml-4">
                          <p class="text-base font-medium text-[#292c2f]">{{ sublink.title }}</p>
                        </div>
                      </a>
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          {% else %}
            <div class="">
              <a class="text-xl {% if link.active==true %}text-[#ECC689]{% endif %}" href="{{ link.url }}">
                {{- link.title -}}
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </nav>
      <div class="hidden md:flex text-xl items-center gap-2">
        <a href="{{ routes.cart_url }}" class="text-[#292c2f] inline-block">{% render 'icon-cart' %}</a>
        {% if shop.customer_accounts_enabled %}
          <a href="{{ routes.account_login_url }}" class="text-[#292c2f] inline-block">Login</a>
          <a href="{{ routes.account_register_url }}" class="text-[#292c2f] inline-block">Register</a>
        {% endif %}
      </div>
    </div>
  </div>
  <div data-mobile-menu class="hidden absolute z-10 top-0 inset-x-0 p-2 transform origin-top-left md:hidden">
    <div class="shadow-lg rounded-lg ring-1 ring-black rind-opacit-5 bg-white w-full">
      <div class="p-5 divide-y-2 divide-gray-50">
        <div class="flex items-center justify-between pb-3">
          <div>
            <h1 class="text-lg text-gray-500">Menu</h1>
          </div>
          <div class="-mr-2">
            <button data-mobile-menu-close-button class="hover:text-gray-600 text-gray-400 text-2xl">
              {% render 'icon-close' %}
            </button>
          </div>
        </div>
        <div class="pt-3">
          <nav class="grid gap-y-7">
            {% for link in linklists['main-menu'].links %}
              {% if link.links != blank %}
                <div class="relative">
                  <button
                    data-mobile-submenu-button
                    class="text-base p-3 -m-3 flex rounded-md items-center justify-between w-full hover:bg-[#939498] text-[#292c2f]"
                  >
                    {{ link.title }}
                    {% render 'icon-chevron-down' %}
                  </button>
                  <div data-mobile-submenu-menu class="hidden grid gap-y-7 py-3">
                    {% for sublink in link.links %}
                      <a
                        href="{{ sublink.url }}"
                        class="flex p-3 -m-3 ml-1 items-center rounded-md hover:bg-[#939498] text-[#292c2f]"
                      >
                        {{- sublink.title -}}
                      </a>
                    {% endfor %}
                  </div>
                </div>
              {% else %}
                <a
                  href="{{ link.url }}"
                  class="flex p-3 -m-3 items-center rounded-md hover:bg-[#939498] text-[#292c2f]"
                >
                  {{- link.title -}}
                </a>
              {% endif %}
            {% endfor %}
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Header",
  "settings": []
}
{% endschema %}
