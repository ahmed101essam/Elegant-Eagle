{% assign is_rtl = false %}
{% if request.locale.iso_code == 'ar' %}
  {% assign is_rtl = true %}
{% endif %}

{% if cart.item_count != 0 %}
  <div class="p-4 py-12" dir="{% if is_rtl %}rtl{% else %}ltr{% endif %}">
    <div class="max-w-6xl mx-auto">
      <!-- Cart Header -->
      <div class="flex items-center justify-between mb-8">
        <h1 class="text-3xl md:text-4xl font-medium">
          {% if is_rtl %}سلة التسوق{% else %}Shopping Cart{% endif %}
        </h1>
        <span class="text-gray-600">
          {{- cart.item_count }}
          {% if is_rtl %}
            {% if cart.item_count == 1 %}منتج{% else %}منتجات{% endif %}
          {% else %}
            {% if cart.item_count == 1 %}item{% else %}items{% endif %}
          {% endif -%}
        </span>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <!-- Cart Items -->
        <div class="md:col-span-2">
          <form action="{{ routes.cart_url }}" method="POST" id="cart-form">
            <!-- Desktop Table View -->
            <div class="hidden md:block">
              <table class="w-full">
                <thead class="border-b-2 border-[#ECC689]">
                  <tr class="{% if is_rtl %}text-right{% else %}text-left{% endif %}">
                    <th class="pb-4 font-medium">
                      {% if is_rtl %}المنتج{% else %}Product{% endif %}
                    </th>
                    <th class="pb-4 font-medium">
                      {% if is_rtl %}السعر{% else %}Price{% endif %}
                    </th>
                    <th class="pb-4 font-medium">
                      {% if is_rtl %}الكمية{% else %}Quantity{% endif %}
                    </th>
                    <th class="pb-4 font-medium">
                      {% if is_rtl %}المجموع{% else %}Total{% endif %}
                    </th>
                    <th class="pb-4"></th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                  {% for item in cart.items %}
                    <tr class="align-center">
                      <!-- Product Info -->
                      <td class="py-6">
                        <div class="flex gap-4">
                          <a href="{{ item.url }}" class="flex-shrink-0">
                            {% if item.image %}
                              <img
                                src="{{ item.image | image_url: width: 150 }}"
                                alt="{{ item.title }}"
                                class="w-24 h-24 object-cover rounded border-2 border-[#ECC689]"
                                loading="lazy"
                                width="96"
                                height="96"
                              >
                            {% else %}
                              {{
                                'product-1'
                                | placeholder_svg_tag: 'w-24 h-24 object-cover rounded border-2 border-gray-200'
                              }}
                            {% endif %}
                          </a>
                          <div>
                            <a href="{{ item.url }}" class="font-medium hover:text-[#ECC689] transition-colors">
                              {{ item.product.title }}
                            </a>
                            {% if item.variant.title != 'Default Title' %}
                              <p class="text-sm text-gray-500 mt-1">{{ item.variant.title }}</p>
                            {% endif %}
                            {% if item.properties.size > 0 %}
                              <div class="text-sm text-gray-500 mt-2">
                                {% for property in item.properties %}
                                  {% unless property.last == blank %}
                                    <p>{{ property.first }}: {{ property.last }}</p>
                                  {% endunless %}
                                {% endfor %}
                              </div>
                            {% endif %}
                          </div>
                        </div>
                      </td>

                      <!-- Price -->
                      <td class="py-6">
                        {% if item.original_price != item.final_price %}
                          <span class="text-gray-400 line-through text-sm block">
                            {{- item.original_price | money -}}
                          </span>
                          <span class="text-red-600 font-medium">{{ item.final_price | money }}</span>
                        {% else %}
                          <span class="font-medium">{{ item.final_price | money }}</span>
                        {% endif %}
                      </td>

                      <!-- Quantity -->
                      <td class="py-6">
                        <div class="flex items-center border border-gray-300 rounded-md w-28">
                          <input
                            type="number"
                            name="updates[]"
                            id="updates_{{ forloop.index }}"
                            value="{{ item.quantity }}"
                            min="0"
                            class="text-center border-x border-gray-300 focus:outline-none w-3/4"
                            data-line="{{ forloop.index }}"
                          >
                          <div class="flex flex-col gap-0 block flex-1">
                            <button
                              type="button"
                              class="hover:bg-gray-100 transition-colors quantity-increase"
                              data-line="{{ forloop.index }}"
                              data-quantity="{{ item.quantity }}"
                            >
                              <i class="fa-solid fa-chevron-up text-xs p-0"></i>
                            </button>
                            <button
                              type="button"
                              class="hover:bg-gray-100 transition-colors quantity-decrease"
                              data-line="{{ forloop.index }}"
                              data-quantity="{{ item.quantity }}"
                            >
                              <i class="fa-solid fa-chevron-down text-xs p-0"></i>
                            </button>
                          </div>
                        </div>
                      </td>

                      <!-- Line Total -->
                      <td class="py-6">
                        <span class="font-medium">{{ item.final_line_price | money }}</span>
                        {% if item.line_level_discount_allocations.size > 0 %}
                          <p class="text-sm text-green-600 mt-1">
                            {% for discount in item.line_level_discount_allocations %}
                              {{ discount.discount_application.title }} (-{{ discount.amount | money }})
                            {% endfor %}
                          </p>
                        {% endif %}
                      </td>

                      <!-- Remove -->
                      <td class="py-6">
                        <a
                          href="{{ item.url_to_remove }}"
                          class="text-gray-400 hover:text-red-600 transition-colors"
                          title="{% if is_rtl %}إزالة المنتج{% else %}Remove item{% endif %}"
                        >
                          <i class="fa-solid fa-trash text-lg"></i>
                        </a>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>

            <!-- Mobile Card View -->
            <div class="md:hidden space-y-4">
              {% for item in cart.items %}
                <div class="border border-gray-200 rounded-lg p-4">
                  <div class="flex gap-4 mb-4">
                    <a href="{{ item.url }}" class="flex-shrink-0">
                      {% if item.image %}
                        <img
                          src="{{ item.image | image_url: width: 150 }}"
                          alt="{{ item.title }}"
                          class="w-20 h-20 object-cover rounded border-2 border-[#ECC689]"
                          loading="lazy"
                          width="80"
                          height="80"
                        >
                      {% else %}
                        {{ 'product-1' | placeholder_svg_tag: 'w-20 h-20 object-cover rounded' }}
                      {% endif %}
                    </a>
                    <div class="flex-1">
                      <a href="{{ item.url }}" class="font-medium hover:text-[#ECC689]">
                        {{ item.product.title }}
                      </a>
                      {% if item.variant.title != 'Default Title' %}
                        <p class="text-sm text-gray-500 mt-1">{{ item.variant.title }}</p>
                      {% endif %}
                      <p class="font-medium mt-2">{{ item.final_price | money }}</p>
                    </div>
                    <a
                      href="{{ item.url_to_remove }}"
                      class="text-gray-400 hover:text-red-600"
                      title="{% if is_rtl %}إزالة{% else %}Remove{% endif %}"
                    >
                      <i class="fa-solid fa-trash"></i>
                    </a>
                  </div>

                  <div class="flex items-center justify-between">
                    <div class="flex items-center border border-gray-300 rounded-md">
                      <button
                        type="button"
                        class="px-3 py-2 quantity-decrease"
                        data-line="{{ forloop.index }}"
                        data-quantity="{{ item.quantity }}"
                      >
                        <i class="fa-solid fa-minus text-sm"></i>
                      </button>
                      <input
                        type="number"
                        name="updates[]"
                        value="{{ item.quantity }}"
                        min="0"
                        disabled
                        class="w-12 text-center border-x border-gray-300 py-2"
                        data-line="{{ forloop.index }}"
                      >
                      <button
                        type="button"
                        class="px-3 py-2 quantity-increase"
                        data-line="{{ forloop.index }}"
                        data-quantity="{{ item.quantity }}"
                      >
                        <i class="fa-solid fa-plus text-sm"></i>
                      </button>
                    </div>
                    <span class="font-medium">{{ item.final_line_price | money }}</span>
                  </div>
                </div>
              {% endfor %}
            </div>

            <!-- Update Cart Button (Hidden, triggered by JS) -->
            <button type="submit" name="update" id="update-cart" class="hidden">
              {% if is_rtl %}تحديث السلة{% else %}Update Cart{% endif %}
            </button>
          </form>

          <!-- Continue Shopping -->
          <div class="mt-6">
            <a
              href="{{ routes.all_products_collection_url }}"
              class="inline-flex items-center gap-2 text-gray-600 hover:text-[#ECC689] transition-colors"
            >
              <i class="fa-solid fa-arrow-{% if is_rtl %}right{% else %}left{% endif %}"></i>
              {% if is_rtl %}متابعة التسوق{% else %}Continue Shopping{% endif %}
            </a>
          </div>
        </div>

        <!-- Order Summary -->
        <div class="md:col-span-1">
          <div class="bg-gray-50 rounded-lg p-6 sticky top-4">
            <h2 class="text-xl font-medium mb-6">
              {% if is_rtl %}ملخص الطلب{% else %}Order Summary{% endif %}
            </h2>

            <div class="space-y-3 mb-6">
              <div class="flex justify-between">
                <span class="text-gray-600">
                  {% if is_rtl %}المجموع الفرعي{% else %}Subtotal{% endif %}
                </span>
                <span class="font-medium">{{ cart.total_price | money }}</span>
              </div>

              {% if cart.cart_level_discount_applications.size > 0 %}
                {% for discount in cart.cart_level_discount_applications %}
                  <div class="flex justify-between text-green-600">
                    <span>{{ discount.title }}</span>
                    <span>-{{ discount.total_allocated_amount | money }}</span>
                  </div>
                {% endfor %}
              {% endif %}

              <div class="flex justify-between text-sm text-gray-500">
                <span>
                  {%- if is_rtl %}الشحن{% else %}Shipping{% endif -%}
                </span>
                <span>
                  {% if is_rtl %}يُحسب عند الدفع{% else %}Calculated at checkout{% endif %}
                </span>
              </div>
            </div>

            <div class="border-t border-gray-300 pt-4 mb-6">
              <div class="flex justify-between items-center text-lg">
                <span class="font-medium">
                  {% if is_rtl %}الإجمالي{% else %}Total{% endif %}
                </span>
                <span class="font-bold text-[#ECC689]">{{ cart.total_price | money }}</span>
              </div>
            </div>

            <!-- Checkout Button -->
            <button
              type="submit"
              name="checkout"
              form="cart-form"
              class="w-full bg-[#ECC689] hover:bg-[#F9E2A9] text-white font-medium py-3 px-6 rounded-md transition-colors"
            >
              {% if is_rtl %}متابعة إلى الدفع{% else %}Proceed to Checkout{% endif %}
            </button>

            <!-- Note -->
            <div class="mt-4">
              <label for="cart-note" class="block text-sm font-medium text-gray-700 mb-2">
                {% if is_rtl %}ملاحظة الطلب (اختياري){% else %}Order Note (Optional){% endif %}
              </label>
              <textarea
                id="cart-note"
                name="note"
                form="cart-form"
                rows="3"
                class="w-full border border-gray-300 rounded-md p-2 text-sm focus:ring-2 focus:ring-[#ECC689] focus:border-transparent focus:outline-none"
                placeholder="{% if is_rtl %}تعليمات خاصة...{% else %}Special instructions...{% endif %}"
              >{{ cart.note }}</textarea>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- JavaScript for Quantity Updates -->
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const quantityInputs = document.querySelectorAll('input[name="updates[]"]');
      const increaseButtons = document.querySelectorAll('.quantity-increase');
      const decreaseButtons = document.querySelectorAll('.quantity-decrease');
      const updateButton = document.getElementById('update-cart');

      // Handle increase
      increaseButtons.forEach((button) => {
        button.addEventListener('click', function () {
          const line = this.dataset.line;
          const input = document.getElementById(`updates_${line}`);
          if (input) {
            input.value = parseInt(input.value) + 1;
            updateButton.click();
          }
        });
      });

      // Handle decrease
      decreaseButtons.forEach((button) => {
        button.addEventListener('click', function () {
          const line = this.dataset.line;
          const input = document.getElementById(`updates_${line}`);
          if (input && parseInt(input.value) > 1) {
            input.value = parseInt(input.value) - 1;
            updateButton.click();
          }
        });
      });

      // Handle direct input change
      quantityInputs.forEach((input) => {
        input.addEventListener('change', function () {
          if (this.value < 0) this.value = 0;
          updateButton.click();
        });
      });
    });
  </script>

{% else %}
  <!-- Empty Cart State -->
  <div class="max-w-6xl mx-auto px-4 py-20" dir="{% if is_rtl %}rtl{% else %}ltr{% endif %}">
    <div class="text-center">
      <div class="mb-6">
        <i class="fa-solid fa-shopping-cart text-6xl text-gray-300"></i>
      </div>
      <h1 class="text-3xl md:text-4xl font-medium mb-4">
        {% if is_rtl %}سلة التسوق فارغة{% else %}Your Cart is Empty{% endif %}
      </h1>
      <p class="text-gray-600 mb-8">
        {% if is_rtl %}
          يبدو أنك لم تضف أي منتجات إلى سلة التسوق بعد.
        {% else %}
          Looks like you haven't added anything to your cart yet.
        {% endif %}
      </p>
      <a
        href="{{ routes.all_products_collection_url }}"
        class="inline-block bg-[#ECC689] hover:bg-[#F9E2A9] text-white font-medium px-8 py-3 rounded-md transition-colors"
      >
        {% if is_rtl %}ابدأ التسوق{% else %}Start Shopping{% endif %}
      </a>
    </div>
  </div>
{% endif %}
