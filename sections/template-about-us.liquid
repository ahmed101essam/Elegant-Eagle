{% assign is_rtl = false %}
{% if request.locale.iso_code == 'ar' %}
  {% assign is_rtl = true %}
{% endif %}

<div class="py-12" dir="{% if is_rtl %}rtl{% else %}ltr{% endif %}">
  <div class="max-w-6xl mx-auto px-4">
    <!-- Hero Section -->
    <div
      class="h-48 md:h-96 p-2"
      style="{% if is_rtl %}{% if section.settings.hero_image_ar %}background-image: url('{{ section.settings.hero_image_ar | image_url: width: 1920 }}');{% endif %}{% else %}{% if section.settings.hero_image_en %}background-image: url('{{ section.settings.hero_image_en | image_url: width: 1920 }}');{% endif %}{% endif %} background-size: cover; background-position: center;"
    >
      <div
        class="h-full border-double border-4 border-[#ECC689] p-2 md:p-6 flex flex-col gap-1 md:gap-2 justify-center items-center text-center"
      >
        <h1 class="text-[#ECC689] text-3xl md:text-5xl font-medium">
          {% if is_rtl %}
            {{ section.settings.hero_heading_ar }}
          {% else %}
            {{ section.settings.hero_heading_en }}
          {% endif %}
        </h1>
        <p class="max-w-2xl text-lg md:text-xl text-white">
          {% if is_rtl %}
            {{ section.settings.hero_subheading_ar }}
          {% else %}
            {{ section.settings.hero_subheading_en }}
          {% endif %}
        </p>
      </div>
    </div>

    <!-- Our Story Section -->
    <div class="mt-16 grid md:grid-cols-2 gap-8 md:gap-12 items-center">
      <div class="order-2 md:order-{% if is_rtl %}2{% else %}1{% endif %}">
        <h2 class="text-2xl md:text-4xl font-medium text-[#ECC689] mb-4">
          {% if is_rtl %}
            {{ section.settings.story_heading_ar }}
          {% else %}
            {{ section.settings.story_heading_en }}
          {% endif %}
        </h2>
        <div class="text-gray-700 leading-relaxed space-y-4">
          {% if is_rtl %}
            {{ section.settings.story_text_ar }}
          {% else %}
            {{ section.settings.story_text_en }}
          {% endif %}
        </div>
      </div>
      <div class="order-1 md:order-{% if is_rtl %}1{% else %}2{% endif %}">
        {% if is_rtl %}
          {% if section.settings.story_image_ar %}
            <img
              src="{{ section.settings.story_image_ar | image_url: width: 800 }}"
              alt="{{ section.settings.story_heading_ar }}"
              class="w-full h-96 object-cover rounded-lg shadow-lg"
              width="800"
              height="384"
            >
          {% endif %}
        {% else %}
          {% if section.settings.story_image_en %}
            <img
              src="{{ section.settings.story_image_en | image_url: width: 800 }}"
              alt="{{ section.settings.story_heading_en }}"
              class="w-full h-96 object-cover rounded-lg shadow-lg"
              width="800"
              height="384"
            >
          {% endif %}
        {% endif %}
      </div>
    </div>

    <!-- Mission & Vision Section -->
    <div class="mt-16 grid md:grid-cols-2 gap-8">
      <!-- Mission -->
      <div class="bg-gray-50 p-8 rounded-lg border-2 border-[#ECC689]">
        <div class="flex items-center gap-3 mb-4">
          <i class="fa-solid fa-bullseye text-[#ECC689] text-3xl"></i>
          <h3 class="text-2xl font-medium text-[#ECC689]">
            {% if is_rtl %}
              {{ section.settings.mission_heading_ar }}
            {% else %}
              {{ section.settings.mission_heading_en }}
            {% endif %}
          </h3>
        </div>
        <p class="text-gray-700 leading-relaxed">
          {% if is_rtl %}
            {{ section.settings.mission_text_ar }}
          {% else %}
            {{ section.settings.mission_text_en }}
          {% endif %}
        </p>
      </div>

      <!-- Vision -->
      <div class="bg-gray-50 p-8 rounded-lg border-2 border-[#ECC689]">
        <div class="flex items-center gap-3 mb-4">
          <i class="fa-solid fa-eye text-[#ECC689] text-3xl"></i>
          <h3 class="text-2xl font-medium text-[#ECC689]">
            {% if is_rtl %}
              {{ section.settings.vision_heading_ar }}
            {% else %}
              {{ section.settings.vision_heading_en }}
            {% endif %}
          </h3>
        </div>
        <p class="text-gray-700 leading-relaxed">
          {% if is_rtl %}
            {{ section.settings.vision_text_ar }}
          {% else %}
            {{ section.settings.vision_text_en }}
          {% endif %}
        </p>
      </div>
    </div>

    <!-- Values Section -->
    {% if section.blocks.size > 0 %}
      <div class="mt-16">
        <h2 class="text-2xl md:text-4xl font-medium text-[#ECC689] text-center mb-12">
          {% if is_rtl %}
            {{ section.settings.values_heading_ar }}
          {% else %}
            {{ section.settings.values_heading_en }}
          {% endif %}
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
          {% for block in section.blocks %}
            <div class="text-center p-6" {{ block.shopify_attributes }}>
              <div class="inline-flex items-center justify-center w-16 h-16 bg-[#ECC689] rounded-full mb-4">
                <i class="{{ block.settings.icon }} text-white text-2xl"></i>
              </div>
              <h4 class="text-xl font-medium mb-3">
                {% if is_rtl %}
                  {{ block.settings.title_ar }}
                {% else %}
                  {{ block.settings.title_en }}
                {% endif %}
              </h4>
              <p class="text-gray-600 leading-relaxed">
                {% if is_rtl %}
                  {{ block.settings.description_ar }}
                {% else %}
                  {{ block.settings.description_en }}
                {% endif %}
              </p>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    <!-- Team Section (Optional) -->
    {% if section.settings.show_team %}
      <div class="mt-16">
        <h2 class="text-2xl md:text-4xl font-medium text-[#ECC689] text-center mb-12">
          {% if is_rtl %}
            {{ section.settings.team_heading_ar }}
          {% else %}
            {{ section.settings.team_heading_en }}
          {% endif %}
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
          {% for i in (1..3) %}
            {% assign member_image = 'team_member_' | append: i | append: '_image' %}
            {% assign member_name_en = 'team_member_' | append: i | append: '_name_en' %}
            {% assign member_name_ar = 'team_member_' | append: i | append: '_name_ar' %}
            {% assign member_role_en = 'team_member_' | append: i | append: '_role_en' %}
            {% assign member_role_ar = 'team_member_' | append: i | append: '_role_ar' %}

            {% if section.settings[member_image] %}
              <div class="text-center">
                <img
                  src="{{ section.settings[member_image] | image_url: width: 400 }}"
                  alt="{% if is_rtl %}{{ section.settings[member_name_ar] }}{% else %}{{ section.settings[member_name_en] }}{% endif %}"
                  class="w-full h-80 object-cover rounded-lg mb-4"
                  width="400"
                  height="320"
                >
                <h4 class="text-xl font-medium">
                  {% if is_rtl %}
                    {{ section.settings[member_name_ar] }}
                  {% else %}
                    {{ section.settings[member_name_en] }}
                  {% endif %}
                </h4>
                <p class="text-[#ECC689]">
                  {% if is_rtl %}
                    {{ section.settings[member_role_ar] }}
                  {% else %}
                    {{ section.settings[member_role_en] }}
                  {% endif %}
                </p>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endif %}

    <!-- CTA Section -->
    <div class="mt-16 bg-gradient-to-r from-[#ECC689] to-[#F9E2A9] p-8 md:p-12 rounded-lg text-center">
      <h2 class="text-2xl md:text-4xl font-medium text-white mb-4">
        {% if is_rtl %}
          {{ section.settings.cta_heading_ar }}
        {% else %}
          {{ section.settings.cta_heading_en }}
        {% endif %}
      </h2>
      <p class="text-lg text-white mb-6 max-w-2xl mx-auto">
        {% if is_rtl %}
          {{ section.settings.cta_text_ar }}
        {% else %}
          {{ section.settings.cta_text_en }}
        {% endif %}
      </p>
      <a
        href="{{ section.settings.cta_link }}"
        class="inline-block bg-white text-[#ECC689] font-medium py-3 px-8 rounded-full hover:bg-gray-100 transition-colors"
      >
        {% if is_rtl %}
          {{ section.settings.cta_button_text_ar }}
        {% else %}
          {{ section.settings.cta_button_text_en }}
        {% endif %}
      </a>
    </div>
  </div>
</div>

