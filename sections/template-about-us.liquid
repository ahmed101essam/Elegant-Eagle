<div class="py-12">
  <div class="max-w-6xl mx-auto px-4">
    <!-- Hero Section -->
    <div
      class="h-48 md:h-96 p-2"
      style="{% if section.settings.hero_image %}background-image: url('{{ section.settings.hero_image | image_url: width: 1920 }}'); background-size: cover; background-position: center;{% endif %}"
    >
      <div
        class="h-full border-double border-6 border-[#ECC689] p-2 md:p-6 flex flex-col gap-1 md:gap-2 justify-center items-center text-center"
      >
        <h1 class="text-[#ECC689] text-3xl md:text-5xl font-medium">{{ section.settings.hero_heading }}</h1>
        <p class="max-w-2xl text-lg md:text-xl text-white">{{ section.settings.hero_subheading }}</p>
      </div>
    </div>

    <!-- Our Story Section -->
    <div class="mt-16 grid md:grid-cols-2 gap-8 md:gap-12 items-center">
      <div class="order-2 md:order-1">
        <h2 class="text-2xl md:text-4xl font-medium text-[#ECC689] mb-4">{{ section.settings.story_heading }}</h2>
        <div class="text-gray-700 leading-relaxed space-y-4">
          {{ section.settings.story_text }}
        </div>
      </div>
      <div class="order-1 md:order-2">
        {% if section.settings.story_image %}
          <img
            src="{{ section.settings.story_image | image_url: width: 800 }}"
            alt="{{ section.settings.story_heading }}"
            class="w-full h-96 object-cover rounded-lg shadow-lg"
          >
        {% endif %}
      </div>
    </div>

    <!-- Mission & Vision Section -->
    <div class="mt-16 grid md:grid-cols-2 gap-8">
      <!-- Mission -->
      <div class="bg-gray-50 p-8 rounded-lg border-2 border-[#ECC689]">
        <div class="flex items-center gap-3 mb-4">
          <i class="fa-solid fa-bullseye text-[#ECC689] text-3xl"></i>
          <h3 class="text-2xl font-medium text-[#ECC689]">{{ section.settings.mission_heading }}</h3>
        </div>
        <p class="text-gray-700 leading-relaxed">{{ section.settings.mission_text }}</p>
      </div>

      <!-- Vision -->
      <div class="bg-gray-50 p-8 rounded-lg border-2 border-[#ECC689]">
        <div class="flex items-center gap-3 mb-4">
          <i class="fa-solid fa-eye text-[#ECC689] text-3xl"></i>
          <h3 class="text-2xl font-medium text-[#ECC689]">{{ section.settings.vision_heading }}</h3>
        </div>
        <p class="text-gray-700 leading-relaxed">{{ section.settings.vision_text }}</p>
      </div>
    </div>

    <!-- Values Section -->
    {% if section.blocks.size > 0 %}
      <div class="mt-16">
        <h2 class="text-2xl md:text-4xl font-medium text-[#ECC689] text-center mb-12">
          {{ section.settings.values_heading }}
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
          {% for block in section.blocks %}
            <div class="text-center p-6" {{ block.shopify_attributes }}>
              <div class="inline-flex items-center justify-center w-16 h-16 bg-[#ECC689] rounded-full mb-4">
                <i class="{{ block.settings.icon }} text-white text-2xl"></i>
              </div>
              <h4 class="text-xl font-medium mb-3">{{ block.settings.title }}</h4>
              <p class="text-gray-600 leading-relaxed">{{ block.settings.description }}</p>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    <!-- Team Section (Optional) -->
    {% if section.settings.show_team %}
      <div class="mt-16">
        <h2 class="text-2xl md:text-4xl font-medium text-[#ECC689] text-center mb-12">
          {{ section.settings.team_heading }}
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
          {% for i in (1..3) %}
            {% assign member_image = 'team_member_' | append: i | append: '_image' %}
            {% assign member_name = 'team_member_' | append: i | append: '_name' %}
            {% assign member_role = 'team_member_' | append: i | append: '_role' %}

            {% if section.settings[member_image] %}
              <div class="text-center">
                <img
                  src="{{ section.settings[member_image] | image_url: width: 400 }}"
                  alt="{{ section.settings[member_name] }}"
                  class="w-full h-80 object-cover rounded-lg mb-4"
                >
                <h4 class="text-xl font-medium">{{ section.settings[member_name] }}</h4>
                <p class="text-[#ECC689]">{{ section.settings[member_role] }}</p>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endif %}

    <!-- CTA Section -->
    <div class="mt-16 bg-gradient-to-r from-[#ECC689] to-[#F9E2A9] p-8 md:p-12 rounded-lg text-center">
      <h2 class="text-2xl md:text-4xl font-medium text-white mb-4">{{ section.settings.cta_heading }}</h2>
      <p class="text-lg text-white mb-6 max-w-2xl mx-auto">{{ section.settings.cta_text }}</p>
      <a
        href="{{ section.settings.cta_link }}"
        class="inline-block bg-white text-[#ECC689] font-medium py-3 px-8 rounded-full hover:bg-gray-100 transition-colors"
      >
        {{ section.settings.cta_button_text }}
      </a>
    </div>
  </div>
</div>

